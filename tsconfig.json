{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "dist",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "declarationMap": true,
    "moduleResolution": "Node",
    "baseUrl": "./src",
    "types": ["node", "mocha", "chai"],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/"]
}
